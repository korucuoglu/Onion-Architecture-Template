{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=5432;Database=test;User Id=postgres;Password=Password1"
  },
  
  "Clients": 
  [
    {
      "ClientName": "VueJs",
      "ApiKey": "123"
    },
    {
      "ClientName": "Mobile",
      "ApiKey": "abc"
    }
  ],

  "ClientApp": {
    "Url": "http://localhost:5000",
    "ValidateMail": "{0}/api/auth/validate/mail/{1}",
    "ValidateToken": "{0}/api/auth/validate/reset-password-token/{1}"
  },

  "JWT": {
    "ValidAudience": "http://localhost:5000",
    "ValidIssuer": "http://localhost:5000",
    "Secret": "this is my custom Secret key for authentication"
  },

  "Redis": {
    "Host": "localhost",
    "Port": "6379"
  },

  "RabbitMQ": {
    "Hostname": "localhost",
    "Username": "admin",
    "Password": "admin123"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": [
      {
        "Ip": "::1/10",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1s",
            "Limit": 20
          }
        ]
      }
    ]
  }
}